<%= simple_form_for(@about) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :portfolio %>
    <%= f.input :website %>
    <%= f.input :email %>
    <%= f.input :signature %>
    <%= f.input :contact %>
    <%= f.input :hobby %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
