<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">

<%= simple_form_for(@project, url: projects_path, html: { class: 'form-horizontal' } )do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="controls">
    <%= f.input :name %>
  </div>
  <div class="controls">
    <%= f.input :description, :as => :ckeditor, :input_html=> {:ckeditor => {:toolbar => "Full"}}, :rows => 16, :cols => 16 %>
  </div>
  <div class="controls">
    <%= f.input :history, :as => :ckeditor, :input_html=> {:ckeditor => {:toolbar => "Full"}}, :rows => 16, :cols => 16 %>
  </div>
  <div class="controls">
    <%= f.input :thumbnail %>
  </div>
  <div class="controls">
    <%= f.submit :submit, class: "btn btn-submit" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
